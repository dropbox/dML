+MPSStream* MPSStreamPool::acquireStream() {
+  ensureInitialized();
+
+  // Round-robin allocation starting from stream 1
+  // (stream 0 is reserved as the default stream)
+  uint32_t idx = next_stream_idx_.fetch_add(1, std::memory_order_relaxed);
